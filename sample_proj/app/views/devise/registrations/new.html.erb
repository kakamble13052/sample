<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>

    <div class="field">
      <%= f.label :firstname %><br />
      <%= f.text_field :firstname %>
    </div>

    <div class="field">
      <%= f.label :lastname %><br />
      <%= f.text_field :lastname %>
    </div>
  <p>
    <%= f.label :role_id %><br />
    <%= f.collection_select :role_id, Role.all, :id, :name, { :class => 'select_role' } %>
  </p>

    <p>
      <%= f.label :manager %><br />
      <%= f.collection_select :manager_id, Manager.all, :id, :username,{ :class => 'select_manager', data: {remote: true} } %>
    </p>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


<script>
  $('#user_role_id').onchange = function(){
     var role;
     role = $(this).val();
     if(role == 3)
         $('#user_manager_id').disabled(false);
     else
         $('#user_manager_id').disabled(true);
  }, {passive:true};
</script>