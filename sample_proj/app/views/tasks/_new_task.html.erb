<%= form_for @task do |f| %>
    <p>
      <%= f.label :desc %><br />
      <%= f.text_area :desc %>
    </p>
    <p>
      <%= f.label :due_date %><br />
      <%= f.datetime_select :due_date %>
    </p>
    <p>
      <%= f.label :assignee %><br />
      <%= self_post f, params[:assignee_id], current_user %>
    </p>
    <p>
      <%= f.label :user %><br />
      <%= admin_post f, current_user %>
    </p>
    <p>
      <%= f.submit 'Assign', data: {'disable_with':'Saving....'} %>
    </p>
<% end %>